{% extends "base.html.twig" %}


{% block title %}Modification de la présentation: {{car.brand}} {{car.model}}{% endblock %}

{% form_theme myForm 'car/_collection.html.twig' %}

{% block body %}

    <div class="container">
        <h1>Modification de la présentation : <strong>{{car.brand}} {{car.model}}</strong></h1>

        {{form_start(myForm)}}

            {{form_widget(myForm)}}
            <button type="submit" class="btn btn-warning mt-3">Modifier</button>


        {{form_end(myForm)}}


    </div>

{% endblock %}

{% block _pres_images_widget %}
    {# Définition du champ pres_image, la variable form correspond au hamp pres_image #}
    <p>Ici, vous pouvez ajouter vos propres images</p>
    {{form_widget(form)}}
    <input type="hidden" id="widgets-counter" value="0">
    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">Ajouter une image</button>
    </div> 

{% endblock %}

{% block _pres_images_entry_row %}
    {{form_widget(form)}}
{% endblock %}

{% block _pres_images_entry_widget %}
    <div class="form-group my-2" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{form_widget(form.url)}}
                        {{form_errors(form.url)}}
                    </div>
                    <div class="col">
                        {{form_widget(form.caption)}}
                        {{form_errors(form.caption)}}</div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}">X</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{encore_entry_script_tags('pres')}}
{% endblock %}